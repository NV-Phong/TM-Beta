@model Task_Manager_Beta.Data.Project

@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateProject</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idleader" class="control-label"></label>
                <input asp-for="Idleader" class="form-control" />
                <span asp-validation-for="Idleader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayCreate" class="control-label"></label>
                <input asp-for="DayCreate" class="form-control" />
                <span asp-validation-for="DayCreate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hide" class="control-label"></label>
                <input asp-for="Hide" class="form-control" />
                <span asp-validation-for="Hide" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next Step" class="btn btn-custom-green border-1 border-custom-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="DashBoard" asp-action="DashBoard" class="btn btn-custom-green border-1 border-custom-dark">« Back to DashBoard »</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
